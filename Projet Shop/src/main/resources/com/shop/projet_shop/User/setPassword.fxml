<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.PasswordField?>
<GridPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
          alignment="CENTER" hgap="10" vgap="10" fx:controller="com.shop.projet_shop.User.UserController">
    <Label text="Modifier Mon Mot de Passe" style="-fx-font-size: 20px;" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Confirmer le Mot de passe:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label fx:id="messageLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" text="" style="-fx-text-fill: #155724; -fx-font-size: 14px; -fx-font-weight: bold;" />

    <Button text="Enregistrer" onAction="#savePassword" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
</GridPane>
