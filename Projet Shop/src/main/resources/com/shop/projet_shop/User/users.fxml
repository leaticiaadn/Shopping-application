                </Button>
                <MenuButton fx:id="userGestionMenu" text="User Gestion">
                    <items>
                        <MenuItem text="View Users" onAction="#UserView"/>
                        <MenuItem text="Add User" onAction="#AddUserView"/>
                        <MenuItem text="Delete User" onAction="#DeleteUserView"/>
                    </items>
                </MenuButton>
                <MenuButton fx:id="productGestionMenu" text="Product Gestion">
                    <items>
                        <MenuItem text="View Products" onAction="#ProductView"/>
                        <MenuItem text="Add Product" onAction="#AddProductView"/>
                        <MenuItem text="Delete Product" onAction="#DeleteProductView"/>
                    </items>
                </MenuButton>
                <MenuButton fx:id="commandeGestionMenu" text="Commande Gestion">
                    <items>
                        <MenuItem text="View Commande" onAction="#CommandeView"/>
                        <MenuItem text="Modify Commande" onAction="#SetCommandeView"/>
                    </items>
                </MenuButton>
                <StackPane onMouseClicked="#WishListView"
                           styleClass="circle-icon"
                           maxWidth="40" maxHeight="40">
                    <SVGPath content="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"
