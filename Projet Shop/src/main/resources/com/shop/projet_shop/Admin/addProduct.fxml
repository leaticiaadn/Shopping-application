<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="contentPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.shop.projet_shop.ProductController" stylesheets="@../style.css">
    <center>
        <StackPane fx:id="contentStack" alignment="CENTER">
            <children>
                <VBox spacing="20.0" alignment="CENTER" maxWidth="Infinity" maxHeight="Infinity">
                    <children>
                        <Text text="Add New Product" styleClass="title" />
                        <GridPane hgap="15" vgap="15" alignment="CENTER">
                            <children>
                                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label text="Stock Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <TextField fx:id="name" promptText="Enter product name" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <TextField fx:id="description" promptText="Enter description" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <TextField fx:id="priceTextField" promptText="Enter price" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <TextField fx:id="stockQuantityField" promptText="Enter stock quantity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Button fx:id="imagePathButton" text="Choose an Image" onAction="#selectImage" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <Label fx:id="imagePathLabel" text="No image selected" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                                <Label fx:id="errorMessage" text="" visible="false" style="-fx-text-fill: red;" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="ALWAYS" maxWidth="400.0" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>

                        <!-- Add Product Button -->
                        <HBox spacing="20" alignment="CENTER">
                            <children>
                                <Button fx:id="addProductButton" mnemonicParsing="false" text="Add Product" onAction="#addProduct"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
