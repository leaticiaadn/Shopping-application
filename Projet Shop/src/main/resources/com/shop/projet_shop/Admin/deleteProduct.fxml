<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="contentPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.shop.projet_shop.Admin.ProductController" stylesheets="@../style.css">
    <center>
        <StackPane fx:id="contentStack" alignment="CENTER">
            <children>
                <VBox spacing="20.0" alignment="CENTER" maxWidth="Infinity" maxHeight="Infinity">
                    <children>
                        <GridPane hgap="15" vgap="15" alignment="CENTER">
                            <children>
                                <Label text="Product name :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <ComboBox fx:id="ProductComboBox" promptText="SÃ©lectionnez un produit" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>

                        <HBox spacing="20" alignment="CENTER">
                            <children>
                                <Button fx:id="deleteProductButton" mnemonicParsing="false" text="Delete Product" onAction="#deleteProduct"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
