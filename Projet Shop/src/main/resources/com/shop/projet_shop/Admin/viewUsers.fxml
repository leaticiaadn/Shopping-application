<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.shop.projet_shop.Admin.AdminController" stylesheets="@../style.css">
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Rechercher : " style="-fx-font-size: 14px;"/>
            <TextField fx:id="searchField" promptText="Entrez l'ID ou le nom de l'utilisateur" style="-fx-font-size: 14px;"/>
            <Button text="Rechercher"   defaultButton="true" style="-fx-font-size: 14px;"/>
        </HBox>
    </top>
    <center>
        <HBox spacing="20" alignment="CENTER">
            <!-- Liste des utilisateurs -->
            <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 15px;">
                <Label text="Liste des Utilisateurs" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 5px;" alignment="CENTER" />
                <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="400" maxWidth="790">
                    <content>
                        <TableView fx:id="userTable" editable="true">
                            <columns>
                                <TableColumn fx:id="idColumn" text="ID" prefWidth="80.0" />
                                <TableColumn fx:id="nameColumn" text="Nom" prefWidth="180.0" />
                                <TableColumn fx:id="emailColumn" text="Email" prefWidth="180.0" />
                                <TableColumn fx:id="roleColumn" text="Rôle" prefWidth="100.0" />
                                <TableColumn fx:id="dateColumn" text="Date de création" prefWidth="150.0" />
                                <TableColumn fx:id="deleteColumn" text="Supprimer" prefWidth="100.0" />
                            </columns>
                        </TableView>
                    </content>
                </ScrollPane>
            </VBox>

            <!-- Ajout d'un utilisateur -->
            <VBox spacing="15" alignment="CENTER" maxHeight="200" style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-border-color: #ddd; -fx-border-width: 1px;">
                <Label text="Ajouter un Utilisateur" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <GridPane hgap="10" vgap="10" alignment="CENTER">
                    <children>
                        <Label text="Nom d'utilisateur:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="user" promptText="Entrez le nom d'utilisateur" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Mot de passe:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <PasswordField fx:id="password" promptText="Entrez le mot de passe" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="email" promptText="Entrez l'email" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Rôle:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <ComboBox fx:id="roleBox" promptText="Choisissez un rôle" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="admin" />
                                    <String fx:value="user" />
                                    <String fx:value="gestionnaire" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <Label fx:id="errorMessage" text="" visible="false" style="-fx-text-fill: red;" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </children>
                </GridPane>
                <Button fx:id="addUserButton" text="Ajouter Utilisateur" onAction="#addUser" style="-fx-background-color: #000000; -fx-text-fill: white; -fx-padding: 10px 15px; -fx-border-radius: 5px;" />
            </VBox>

        </HBox>
    </center>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
