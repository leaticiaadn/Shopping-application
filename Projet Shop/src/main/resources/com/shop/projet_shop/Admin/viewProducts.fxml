<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.shop.projet_shop.ProductController" stylesheets="@../style.css">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="addProductButton" text="Add Product" onAction="#addProductView" />
        </HBox>
        <VBox fx:id="notificationBox" spacing="5" alignment="TOP_LEFT" minHeight="100">
            <padding>
                <Insets top="10" right="10" left="10"/>
            </padding>
        </VBox>
    </top>

    <center>
        <StackPane>
            <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true">
                <content>
                    <GridPane fx:id="productGrid" alignment="CENTER" hgap="20" vgap="20"/>
                </content>
            </ScrollPane>
        </StackPane>
    </center>
</BorderPane>
