<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.shop.projet_shop.Admin.ProductController" stylesheets="@../style.css">
    <top>
        <!-- Titre de la page -->
        <Label text="Liste de produits" style="-fx-font-size: 18px; -fx-font-weight: bold;" alignment="CENTER" />
    </top>
    <center>
        <!-- Utilisation d'un ScrollPane pour rendre la TableView défilable -->
        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true">
            <content>
                <!-- TableView pour afficher les produits -->
                <TableView fx:id="productTable" editable="false">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="Nom" prefWidth="150.0" />
                        <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250.0" />
                        <TableColumn fx:id="priceColumn" text="Prix" prefWidth="100.0" />
                        <TableColumn fx:id="stockColumn" text="Stock" prefWidth="100.0" />
                        <TableColumn fx:id="dateColumn" text="Date de création" prefWidth="150.0" />
                    </columns>
                </TableView>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
