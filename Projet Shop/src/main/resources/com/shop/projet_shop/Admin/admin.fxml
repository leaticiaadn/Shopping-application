<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>

<BorderPane fx:id="contentPane" fx:controller="com.shop.projet_shop.Admin.AdminView"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Zone supérieure (Navigation Bar) -->
    <top>
        <HBox fx:id="topNav" alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5dcf5;">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <children>
                <Button text="Dashboard" onAction="#showInterface" />
                <MenuButton text="User Gestion">
                    <items>
                        <MenuItem text="View Users" onAction="#AddUserView"/>
                        <MenuItem text="Add User" onAction="#AddUserView"/>
                        <MenuItem text="Delete User" onAction="#DeleteUserView"/>
                    </items>
                </MenuButton>
                <MenuButton text="Product Gestion">
                    <items>
                        <MenuItem text="View Products" onAction="#ProductView"/>
                        <MenuItem text="Add Product" onAction="#AddProductView"/>
                        <MenuItem text="Delete Product" onAction="#DeleteProductView"/>
                        <MenuItem text="Delete Product" onAction="#DeleteProductView"/>
                    </items>
                </MenuButton>
                <MenuButton text="Commande Gestion">
                    <items>
                        <MenuItem text="View Commande" onAction="#CommandeView"/>
                        <MenuItem text="Modify Commande" onAction="#SetCommandeView"/>
                    </items>
                </MenuButton>
                <Button text="Logout" onAction="#logout" />
            </children>
        </HBox>
    </top>

    <!-- Zone centrale (Affichage des vues) -->
    <center>
        <!-- Cette zone sera modifiée dynamiquement -->
    </center>

    <!-- Zone inférieure (Footer) -->
    <bottom>
        <fx:include source="../Footer.fxml" />
    </bottom>
</BorderPane>
