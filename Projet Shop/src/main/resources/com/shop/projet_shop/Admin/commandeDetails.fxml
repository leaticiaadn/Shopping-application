<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.shop.projet_shop.CommandeDetailController">
    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Détails de la commande" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    <center>
        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true">
            <content>
                <VBox >
                    <Label text="Liste Produits " style="-fx-font-size: 18px; -fx-font-weight: bold;" alignment="CENTER" />
                    <TableView fx:id="orderItemTable" editable="true">
                        <columns>
                            <TableColumn fx:id="productColumn" text="Produit" prefWidth="200" />
                            <TableColumn fx:id="quantityColumn" text="Quantité" prefWidth="100" />
                            <TableColumn fx:id="totalColumn" text="Total" prefWidth="100" />
                        </columns>
                    </TableView>
                    <Label text="La Facture " style="-fx-font-size: 18px; -fx-font-weight: bold;" alignment="CENTER" />
                    <TableView fx:id="factureTable" editable="true">
                        <columns>
                            <TableColumn fx:id="amountColumn" text="Montant" prefWidth="100" />
                            <TableColumn fx:id="dateFactureColumn" text="Date Facture" prefWidth="150" />
                        </columns>
                    </TableView>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
