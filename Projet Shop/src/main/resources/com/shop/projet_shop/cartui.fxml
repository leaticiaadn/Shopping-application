<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shop.projet_shop.AppController" stylesheets="@style.css">
    <children>
        <BorderPane fx:id="contentPane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <!-- Barre de navigation supérieure -->
            <top>
                <HBox fx:id="topNav" alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5dcf5;">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                    </padding>
                    <children>
                        <Button onAction="#showHomeView" text="Accueil" styleClass="nav-button" />
                        <Button onAction="#showCartView" text="Panier" styleClass="nav-button" />
                        <MenuButton fx:id="authMenu" text="Authentification" styleClass="menu-button">
                            <items>
                                <MenuItem text="Login" onAction="#showLoginView" />
                                <MenuItem text="Sign In" onAction="#showSignInView" />
                            </items>
                        </MenuButton>
                    </children>
                </HBox>
            </top>
            <center>
                <VBox alignment="CENTER">
                    <Label text="Bienvenue sur notre site !" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4A90E2;" />
                </VBox>
            </center>
            <bottom>
                <HBox fx:id="footer" alignment="CENTER" style="-fx-background-color: #f0f0f0;">
                    <padding>
                        <Insets top="5.0" bottom="5.0" />
                    </padding>
                    <children>
                        <Label text="© 2024 Mon Application" style="-fx-text-fill: #999;" />
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
