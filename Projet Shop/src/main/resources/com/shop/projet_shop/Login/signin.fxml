<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane fx:id="contentPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.shop.projet_shop.Login.SignInController" stylesheets="@../style.css">
    <center>
        <!-- StackPane parent pour centrer tout le contenu -->
        <StackPane fx:id="contentStack" alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="15.0" maxWidth="Infinity" maxHeight="Infinity">
                    <!-- VBox centrÃ© avec maxWidth et maxHeight-->
                    <children>
                        <GridPane hgap="10" vgap="15" alignment="CENTER">
                            <!-- Espacement horizontal et vertical dans le GridPane -->
                            <children>
                                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Label text="e-mail:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                <TextField fx:id="username" promptText="Choose a username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <TextField fx:id="email" promptText="inset your email" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <PasswordField fx:id="password" promptText="Choose a password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <PasswordField fx:id="confirmPassword" promptText="Confirm your password" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Label fx:id="errorMessage" text="" visible="false" style="-fx-text-fill: red;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>

                        <HBox spacing="20" alignment="CENTER">
                            <children>
                                <Button fx:id="signUpButton" mnemonicParsing="false" text="Sign Up" onAction="#handleSignUp" />
                                <Button fx:id="backToLoginButton" mnemonicParsing="false" text="Back to Login" onAction="#showLoginView"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
