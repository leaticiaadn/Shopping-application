<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="contentPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.shop.projet_shop.Login.LoginController" stylesheets="@../style.css">
    <center>
        <StackPane fx:id="contentStack" alignment="CENTER">
            <children>
                <VBox spacing="20.0" alignment="CENTER" maxWidth="Infinity" maxHeight="Infinity">
                    <!-- VBox avec espacement augmenté pour les éléments -->
                    <children>
                        <GridPane hgap="15" vgap="15" alignment="CENTER">
                            <!-- Espacement horizontal et vertical dans le GridPane -->
                            <children>
                                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="user" promptText="username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                <PasswordField fx:id="password" promptText="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label fx:id="errorMessage" text="" visible="false" style="-fx-text-fill: red;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="148.0" minWidth="10.0" prefWidth="109.0" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="228.0" minWidth="10.0" prefWidth="189.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                        </GridPane>

                        <HBox spacing="20" alignment="CENTER">
                            <children>
                                <Button fx:id="goToSignin" mnemonicParsing="false" text="Sign In" onAction="#showSignInView"/>
                                <Button fx:id="loginButton" mnemonicParsing="false" text="Login" onAction="#handleLogin" defaultButton="true"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
