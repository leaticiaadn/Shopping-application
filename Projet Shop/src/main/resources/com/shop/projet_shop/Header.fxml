<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:id="contentPane" fx:controller="com.shop.projet_shop.AppController"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox fx:id="topNav"  alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5dcf5;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                </padding>
                <children>
                    <Button onAction="#showHomeView" style="-fx-background-color: #F9429E;" text="Accueil" />
                    <Button onAction="#showCartView" style="-fx-background-color: #F9429E;" text="Panier" />
                    <ComboBox fx:id="authOptions" onAction="#handleAuthSelection">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Login" />
                                <String fx:value="Sign In" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </children>
        </HBox>
    </top>
</BorderPane>



